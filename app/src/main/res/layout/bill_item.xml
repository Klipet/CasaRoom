<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="190dp"
            android:layout_height="69dp"
            android:layout_marginTop="5dp"
            android:text="Название"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemQuan"
            android:layout_width="69dp"
            android:layout_height="61dp"
            android:layout_marginStart="70dp"
            android:text="13"
            app:layout_constraintStart_toEndOf="@+id/tvItemName"
            app:layout_constraintTop_toTopOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/tvItemSum"
            android:layout_width="145dp"
            android:layout_height="59dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:text="150"
            app:layout_constraintStart_toEndOf="@+id/tvItemQuan"
            app:layout_constraintTop_toTopOf="@+id/tvItemQuan" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="196dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_delete_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>